{
  "name": "@oyster/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "migrate": "tsx ./src/scripts/migrate.ts && yarn db:types",
    "migrate:down": "tsx ./src/scripts/migrate.ts --down && yarn db:types",
    "seed": "tsx ./src/scripts/seed.ts && yarn db:types",
    "setup": "tsx ./src/scripts/setup.ts",
    "type-check": "tsc --noEmit",
    "types": "kysely-codegen --dialect=postgres --camel-case"
  },
  "dependencies": {
    "kysely": "^0.26.3",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@oyster/tsconfig": "*",
    "@types/pg": "^8.11.2",
    "commander": "^12.0.0",
    "kysely-codegen": "^0.10.1",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
